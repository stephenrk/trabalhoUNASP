@model WebApplication2.Models.RecargaModel

<div class="container" style="margin-top:40px">
    <div class="row padding-bottom">
        <div class="col-xs-12">
            <div class="well">
                <h1 class="title"></h1>
                <p>Informe os dados abaixo:</p>
                @using (Html.BeginForm("IncluirRecarga", "Home", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group col-md-4">
                        @Html.Label("Telefone")
                        @Html.DropDownListFor(x => x.TelefoneId, Model.Telefones, "Selecione...", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Valor")
                        @Html.TextBoxFor(x => x.Valor, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.Label("Forma de pagamento")
                        @Html.DropDownListFor(x => x.FormaPagId, Model.FormasPagamento, "Selecione...", new { @class = "form-control" })
                    </div>
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-floppy-disk"></span>
                            Gravar
                        </button>
                    </div>
                }

                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Número</th>
                            <th>Operadora</th>
                            <th>Valor</th>
                            <th>Forma de Pag</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var recarga in Model.Recargas)
                        {
                            <tr>
                                <td>@recarga.Id</td>
                                <td>@recarga.Telefone.Numero</td>
                                <td>@recarga.Telefone.Operadora.Nome</td>
                                <td>@recarga.Valor</td>
                                <td>@recarga.FormaPagamento.Descricao</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5">Total de registros: @ViewBag.total</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>